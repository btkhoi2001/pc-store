extends ../layouts/default.pug

block main
    - currentPage = parseInt(currentPage)
    - totalPages = parseInt(totalPages)
    .breadcrumb-area
        .container
            .breadcrumb-content
                ul
                    li
                        a(href='.') Trang chủ
                    li.active Màn hình
    .content-wraper.pt-60.pb-60.pt-sm-30
        .container
            .row
                .col-lg-9.order-1.order-lg-2
                    .shop-top-bar.mt-30
                        .shop-bar-inner
                            .product-view-mode
                                ul.nav.shop-item-filter-list(role='tablist')
                                    li.active(role='presentation')
                                        a.active.show(aria-selected='true' data-toggle='tab' role='tab' aria-controls='grid-view' href='#grid-view')
                                            i.fa.fa-th
                                    li(role='presentation')
                                        a(data-toggle='tab' role='tab' aria-controls='list-view' href='#list-view')
                                            i.fa.fa-th-list
                        .product-select-box
                            .product-short
                                p Sắp xếp theo: 
                                select.nice-select
                                    option(value='name-asc') Tên (A - Z)
                                    option(value='name-desc') Tên (Z - A)
                                    option(value='price-asc') Giá (Thấp #{'>'} Cao)
                                    option(value='price-desc') Giá (Cao #{'>'} Thấp)
                                    option(value='rating') Nhận xét
                                    option(value='new') Mới nhất
                                    option(value='old') Cũ nhất
                                    option(value='best-seller') Bán chạy
                    .shop-products-wrapper
                        .tab-content
                            #grid-view.tab-pane.fade.active.show(role='tabpanel')
                                .product-area.shop-product-area
                                    .row
                                        each product in products 
                                            .col-lg-4.col-md-4.col-sm-6.mt-40
                                                .single-product-wrap
                                                    .product-image
                                                        a(href=`/product/${product.slug}`)
                                                            img(src=product.imageUrl alt=product.name)
                                                        span.sticker Mới
                                                    .product_desc
                                                        .product_desc_info
                                                            .product-review
                                                                .rating-box
                                                                    ul.rating
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li.no-star
                                                                            i.fa.fa-star-o
                                                                        li.no-star
                                                                            i.fa.fa-star-o
                                                            h4
                                                                a.product_name(href=`/product/${product.slug}`)= product.name
                                                            .price-box
                                                                span.new-price= product.price + " VNĐ"
                                                        .add-actions
                                                            ul.add-actions-link
                                                                li.add-cart
                                                                    a(href='#')
                                                                        i.fa.fa-cart-plus
                                                                li
                                                                    a.quick-view-btn(href='#' title='quick view' data-toggle='modal' data-target='#exampleModalCenter')
                                                                        i.fa.fa-eye
                                                                li
                                                                    a.links-details(href='wishlist.html')
                                                                        i.fa.fa-heart-o
                            #list-view.tab-pane.fade.product-list-view(role='tabpanel')
                                .row
                                    .col
                                        each product in products 
                                            .row.product-layout-list
                                                .col-lg-3.col-md-5
                                                    .product-image
                                                        a(href=`/product/${product.slug}`)
                                                            img(src=product.imageUrl alt=product.name)
                                                        span.sticker Mới
                                                .col-lg-5.col-md-7
                                                    .product_desc
                                                        .product_desc_info
                                                            .product-review
                                                                .rating-box
                                                                    ul.rating
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li
                                                                            i.fa.fa-star-o
                                                                        li.no-star
                                                                            i.fa.fa-star-o
                                                                        li.no-star
                                                                            i.fa.fa-star-o
                                                            h4
                                                                a.product_name(href=`/product/${product.slug}`)= product.name
                                                            .price-box
                                                                span.new-price= product.price + " VNĐ"
                                                .col-lg-4
                                                    .shop-add-action.mb-xs-30
                                                        ul.add-actions-link
                                                            li.add-cart
                                                                a(href='#')
                                                                    i.fa.fa-cart-plus
                                                            li.wishlist
                                                                a(href='wishlist.html')
                                                                    i.fa.fa-heart-o
                                                                    | Thích
                                                            li
                                                                a.quick-view(data-toggle='modal' data-target='#exampleModalCenter' href='#')
                                                                    i.fa.fa-eye
                                                                    | Quick view
                            .paginatoin-area
                                .row
                                    .col-lg-6.col-md-6.pt-xs-15
                                    .col-lg-6.col-md-6                                    
                                        ul.pagination-box.pt-xs-20.pb-xs-15
                                            if currentPage > 1
                                                li
                                                    a.Previous(href=`?page=${currentPage - 1}`)
                                                        i.fa.fa-chevron-left
                                            else 
                                                li.disabled
                                                    a.Previous(href='#')
                                                        i.fa.fa-chevron-left 
                                                                                       
                                            if totalPages == 1
                                                li.active
                                                    a(href='#') 2
                                            else if totalPages == 2
                                                if currentPage == 1
                                                    li.active
                                                        a(href="#") 1
                                                    li
                                                        a(href=`?page=2`) 2
                                                else
                                                    li
                                                        a(href=`?page=1`) 1
                                                    li.active 
                                                        a(href="#") 2
                                            else
                                                if currentPage <= 1
                                                    li.active 
                                                        a(href="#") 1
                                                    li
                                                        a(href=`?page=2`) 2
                                                    li
                                                        a(href=`?page=3`) 3
                                                else if currentPage >= totalPages 
                                                    li
                                                        a(href=`?page=${totalPages - 2}`)= totalPages - 2
                                                    li
                                                        a(href=`?page=${totalPages - 1}`)= totalPages - 1
                                                    li.active 
                                                        a(href="#")= totalPages 
                                                else
                                                    li
                                                        a(href=`?page=${currentPage - 1}`)= currentPage - 1
                                                    li.active
                                                        a(href="#")= currentPage
                                                    li 
                                                        a(href=`?page=${currentPage + 1}`)= currentPage + 1
                                            if currentPage >= totalPages
                                                li.disabled
                                                    a.Next(href='#')
                                                        i.fa.fa-chevron-right
                                            else
                                                li
                                                    a.Next(href=`?page=${currentPage + 1}`)
                                                        i.fa.fa-chevron-right
                .col-lg-3.order-2.order-lg-1
                    .sidebar-categores-box
                        .sidebar-title
                            h2 Bộ lọc tìm kiếm
                        button.btn-clear-all.mb-sm-30.mb-xs-30 Xóa tất cả
                        .filter-sub-area.pt-sm-10.pt-xs-10                     
                            h5.filter-sub-titel Thương hiệu
                            .categori-checkbox
                                form(action='')
                                    ul
                                        each brand in filterBrands
                                            li
                                                if (typeof brand.checked != "undefined" && brand.checked)
                                                    input(type='checkbox' name='brands[]' value=brand.content checked)
                                                else 
                                                    input(type='checkbox' name='brands[]' value=brand.content)
                                                a(href='#')= brand.content
    #exampleModalCenter.modal.fade.modal-wrapper
        .modal-dialog.modal-dialog-centered(role='document')
            .modal-content
                .modal-body
                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                            span(aria-hidden='true') x
                        .modal-inner-area.row
                            .col-lg-5.col-md-6.col-sm-6
                                .product-details-left
                                    .product-details-images.slider-navigation-1
                                        .lg-image
                                            img(src='/images/product/large-size/1.jpg' alt='product image')
                                        .lg-image
                                            img(src='/images/product/large-size/2.jpg' alt='product image')
                                        .lg-image
                                            img(src='/images/product/large-size/3.jpg' alt='product image')
                                        .lg-image
                                            img(src='/images/product/large-size/4.jpg' alt='product image')
                                        .lg-image
                                            img(src='/images/product/large-size/5.jpg' alt='product image')
                                        .lg-image
                                            img(src='/images/product/large-size/6.jpg' alt='product image')
                                    .product-details-thumbs.slider-thumbs-1
                                        .sm-image
                                            img(src='/images/product/small-size/1.jpg' alt='product image thumb')
                                        .sm-image
                                            img(src='/images/product/small-size/2.jpg' alt='product image thumb')
                                        .sm-image
                                            img(src='/images/product/small-size/3.jpg' alt='product image thumb')
                                        .sm-image
                                            img(src='/images/product/small-size/4.jpg' alt='product image thumb')
                                        .sm-image
                                            img(src='/images/product/small-size/5.jpg' alt='product image thumb')
                                        .sm-image
                                            img(src='/images/product/small-size/6.jpg' alt='product image thumb')
                            .col-lg-7.col-md-6.col-sm-6
                                .product-details-view-content.pt-60
                                    .product-info
                                        h2 Dell S2421HN Monitor - 23.8 inch, FHD, IPS, 75Hz, 2x HDMI
                                        .rating-box.pt-20
                                            ul.rating.rating-with-review-item
                                                li
                                                    i.fa.fa-star-o
                                                li
                                                    i.fa.fa-star-o
                                                li
                                                    i.fa.fa-star-o
                                                li.no-star
                                                    i.fa.fa-star-o
                                                li.no-star
                                                    i.fa.fa-star-o
                                                li.review-item
                                                    a(href='/products/1') Nhận xét
                                        .price-box.pt-20
                                            span.new-price.new-price-2 4.489.000 VNĐ
                                        .product-desc
                                            p Màn hình làm vi&#x1EC7;c Dell S2421HN ch&acirc;n màu b&#x1EA1;c sang tr&#x1ECD;ng
                                            p T&#x1EA5;m n&#x1EC1;n IPS cho g&oacute;c nhìn l&ecirc;n &dstrok;ến 178&prime;
                                            p Vi&#x1EC1;n m&#x1ECF;ng, h&#x1EC7; màu NTSC &dstrok;&#x1EA1;t 72% (CIE 1931)
                                            p H&#x1ED7; tr&#x1EE3; c&#x1ED5;ng HDMI th&ocirc;ng d&#x1EE5;ng v&#x1EDB;i m&#x1ECD;i PC
                                        .single-add-to-cart
                                            form.cart-quantity(action='#')
                                                .quantity
                                                    label Số lượng
                                                    .cart-plus-minus
                                                        input.cart-plus-minus-box(value='1' type='text')
                                                        .dec.qtybutton
                                                            i.fa.fa-angle-down
                                                        .inc.qtybutton
                                                            i.fa.fa-angle-up
                                                button.add-to-cart(type='submit') Th&ecirc;m vào gi&#x1ECF; hàng
                                        .product-additional-info.pt-25
                                            a.wishlist-btn(href='wishlist.html')
                                                i.fa.fa-heart-o
                                                | Thích